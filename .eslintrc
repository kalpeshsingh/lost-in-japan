{
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2015,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react", "import"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "rules": {
    "no-console": 1,
    "no-mixed-spaces-and-tabs": [2, "smart-tabs"],
    "no-unused-vars": ["error", { "varsIgnorePattern": "[iI]gnored" }]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
